@{
    ViewBag.Title = "Blackjack";
}

<header>
    <script src="~/Scripts/blackjack.js"></script>
    <aside >
        @Html.Partial("_ChatPartial")
    </aside>
</header>

<div id="bjcontainer">
	<!-- Spilari 7 -->
	<div id="player6" class="playingField">
		<!-- Nafn spilara -->
		<div id="player6Name" class="textBox name">&nbsp;</div>
		<!-- Inneign spilara -->
		<div id="player6Credits" class="textBox dollars">&nbsp;</div>
		<!-- Stig spilara -->
		<div id="player6Score"  class="textBox">&nbsp;</div>
		<!-- Veðmál spilara -->
		<div id="player6Bet"    class="textBox dollars">&nbsp;</div>
		<!-- Niðurstaða leikmanns úr spili -->
		<div id="player6Result" class="textBox result">&nbsp;</div>
		<!-- Spil leikmanns -->
		<div id="player6Cards"  class="cardArea"></div>
	</div>
	<!-- Gjafari. -->
	<div id="dealer" class="playingField">
		<div class="textBox name">Gjafari</div>
		<div id="dealerScore" class="textBox">&nbsp;</div>
		<div id="dealerCards" class="cardArea"></div>
	</div>
	<!-- Spilari 1 -->
	<div id="player0" class="playingField">
		<div id="player0Name" class="textBox name">&nbsp;</div>
		<div id="player0Credits" class="textBox dollars">&nbsp;</div>
		<div id="player0Score"  class="textBox">&nbsp;</div>
