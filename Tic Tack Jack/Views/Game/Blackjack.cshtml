	<!-- Spilari 6 -->
	<div id="player5" class="playingField">
		<div id="player5Name" class="textBox name">&nbsp;</div>
		<div id="player5Credits" class="textBox dollars">&nbsp;</div>
		<div id="player5Score"  class="textBox">&nbsp;</div>
		<div id="player5Bet"    class="textBox dollars">&nbsp;</div>
		<div id="player5Result" class="textBox result">&nbsp;</div>
		<div id="player5Cards"  class="cardArea"></div>
	</div>
	<!-- Stjórnborð -->
	<div class="center">
		<!-- Takki til að setjast við borðið -->
		<input type="button" class="sitdown" value="Setjast" onclick="sit();" />
		<!-- 1,5,10,50 spilapeningar fyrir veðmál -->
		<img id="bet1" src="~/Images/blackjack/1.png" alt="5" onclick="changeBet(+1); return false;" style=" " />
		<img id="bet5" src="~/Images/blackjack/5.png" alt="5" onclick="changeBet(+5); return false;" style=" " />
		<img id="bet10" src="~/Images/blackjack/10.png" alt="5" onclick="changeBet(+10); return false;" style=" " />
		<img id="bet50" src="~/Images/blackjack/50.png" alt="5" onclick="changeBet(+50); return false;" style=" " />
		<!-- Textabox sem birtir upphæð sem leikmaður vill leggja undir -->
		<div id="betting" style=" ";>&nbsp;</div>
		<!-- Hreinsa og leggja undir takkar -->
		<img id="clear" src="~/Images/blackjack/clear.png" alt="Hreinsa" onclick="changeBet(0); return false;" style=" " />
		<img id="deal" src="~/Images/blackjack/bet.png" alt="Leggja undir" onclick="makeBet(); return false;" style=" " />
		<!-- Gefa og standa takkar -->
		<img id="hit" src="~/Images/blackjack/hit.png" alt="Gefa" onclick="playerHit();" style="display: none;" />
		<img id="stand" src="~/Images/blackjack/stand.png" alt="Stoppa" onclick="playerStand();" style="display: none;" />
		<!-- Teljari fyrir aðgerðir leikmanna -->
		<div id="counter">&nbsp;</div>
	</div>
